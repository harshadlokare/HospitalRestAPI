@using Application.Entities
@model Application.Entities.Doctor

@{
    ViewData["Title"] = "PatientPerDoc";
    var doc = (List<SelectListItem>)ViewBag.Doc;
}

<h1>PatientPerDoc</h1>


<form asp-action="ListPatientperDoctor">
    <div class="form-group">        
        Select Doctor 
        <select asp-for="Doctor_Id" class="form-control"
                asp-items="@doc"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>
